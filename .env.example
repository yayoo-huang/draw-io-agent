# Draw.io Agent - Environment Configuration

# ============================================
# LLM Provider Configuration
# ============================================

# Primary provider (default: bedrock)
# Options: bedrock, openai, anthropic, google, azure, ollama, openrouter, deepseek, siliconflow, gateway
AI_PROVIDER=bedrock

# Model ID for the selected provider
# Bedrock examples:
#   - anthropic.claude-sonnet-4-5-v2:0
#   - anthropic.claude-3-5-sonnet-20241022-v2:0
# Anthropic examples:
#   - claude-sonnet-4-5-20241022
#   - claude-3-5-sonnet-20241022
# OpenAI examples:
#   - gpt-4o
#   - gpt-4-turbo
AI_MODEL=anthropic.claude-sonnet-4-5-v2:0

# ============================================
# AWS Bedrock Configuration (Default Provider)
# ============================================

# AWS Region for Bedrock
AWS_REGION=us-west-2

# AWS Credentials (optional if using IAM role)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================
# Alternative Provider Configurations
# ============================================

# OpenAI
# OPENAI_API_KEY=sk-...
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional custom endpoint

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini
# GOOGLE_GENERATIVE_AI_API_KEY=...

# Azure OpenAI
# AZURE_API_KEY=...
# AZURE_RESOURCE_NAME=your-resource-name
# AZURE_BASE_URL=https://your-resource.openai.azure.com  # Alternative to RESOURCE_NAME

# OpenRouter
# OPENROUTER_API_KEY=...

# DeepSeek
# DEEPSEEK_API_KEY=...
# DEEPSEEK_BASE_URL=https://api.deepseek.com  # Optional

# SiliconFlow
# SILICONFLOW_API_KEY=...
# SILICONFLOW_BASE_URL=https://api.siliconflow.com/v1  # Optional

# Vercel AI Gateway
# AI_GATEWAY_API_KEY=...
# AI_GATEWAY_BASE_URL=...  # Optional

# Ollama (Local)
# OLLAMA_BASE_URL=http://localhost:11434  # Optional

# ============================================
# Server Configuration
# ============================================

# Backend server port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ============================================
# Feature Flags
# ============================================

# Enable debug logging
DEBUG=false

# Maximum analysis depth
MAX_ANALYSIS_DEPTH=5

# Maximum file size to read (in bytes)
MAX_FILE_SIZE=1048576

# Enable caching
ENABLE_CACHE=true

# ============================================
# Context Management
# ============================================

# Auto-condense threshold (0.0-1.0, default: uses ContextManager's internal logic)
# When context usage exceeds this percentage of maxAllowedSize, optimization triggers
# Example: 0.6 = 60% of maxAllowedSize (for Claude 200K: triggers at ~96K tokens)
# AUTO_CONDENSE_THRESHOLD=0.6
